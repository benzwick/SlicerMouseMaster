{
  "id": "default_mx_master_4",
  "name": "MX Master 4 Default",
  "version": "1.0",
  "mouseId": "logitech_mx_master_4",
  "author": "SlicerMouseMaster",
  "description": "Default bindings for Logitech MX Master 4",
  "mappings": {
    "middle": {
      "action": "view_reset_3d"
    },
    "back": {
      "action": "keyboard_shortcut",
      "parameters": {
        "key": "Left",
        "modifiers": ["ctrl"]
      }
    },
    "forward": {
      "action": "keyboard_shortcut",
      "parameters": {
        "key": "Right",
        "modifiers": ["ctrl"]
      }
    },
    "thumb": {
      "action": "view_toggle_crosshair"
    }
  },
  "contextMappings": {
    "SegmentEditor": {
      "back": {
        "action": "edit_undo"
      },
      "forward": {
        "action": "edit_redo"
      }
    },
    "Markups": {
      "back": {
        "action": "edit_undo"
      },
      "forward": {
        "action": "edit_redo"
      }
    },
    "VolumeRendering": {
      "back": {
        "action": "volumerendering_toggle"
      },
      "forward": {
        "action": "view_reset_3d"
      }
    }
  }
}
